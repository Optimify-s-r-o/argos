{
  "name": "argos",
  "version": "0.0.5",
  "productName": "Argos",
  "description": "Argos",
  "author": {
    "name": "Optimify s.r.o.",
    "email": "info@optimify.cz"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-regular-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.16",
    "@types/react-router": "^5.1.12",
    "@types/react-router-dom": "^5.1.7",
    "@wojtekmaj/react-daterange-picker": "^2.5.0",
    "concurrently": "^5.3.0",
    "date-fns": "^2.16.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.3.2",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.3.8",
    "i18next": "^17.3.1",
    "is-electron": "^2.2.0",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.1",
    "react": "^17.0.1",
    "react-circular-progressbar": "^2.0.3",
    "react-contextmenu": "^2.13.0",
    "react-date-picker": "^7.10.0",
    "react-date-range": "^1.1.3",
    "react-dom": "^17.0.1",
    "react-i18next": "^10.13.2",
    "react-numeric-input": "^2.2.3",
    "react-redux": "^7.2.0",
    "react-resize-aware": "^3.1.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.3",
    "react-select": "^3.1.0",
    "react-switch": "^5.0.1",
    "redux": "^4.0.5",
    "styled-components": "^5.1.0",
    "truncate-middle": "^1.0.6",
    "uuid": "^3.4.0",
    "watch": "^1.0.2",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "dev": "concurrently \"yarn watch\" \"electron . --dev\"",
    "watch": "watch \"yarn build\" ./src",
    "start": "env-cmd -f .env.prod react-scripts start",
    "start:local": "env-cmd -f .env react-scripts start",
    "build": "env-cmd -f .env.prod react-scripts build",
    "build:dev": "env-cmd -f .env.dev react-scripts build",
    "build:prod": "env-cmd -f .env.prod react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prod": "concurrently -k \"npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "release": "npm run build:prod && electron-builder build --win -p always",
    "release:dev": "npm run build:dev && electron-builder build --win -p always"
  },
  "build": {
    "productName": "Argos",
    "appId": "org.common.argos",
    "copyright": "Copyright Â© 2018-2020 Optimify s.r.o.",
    "publish": [
      {
        "provider": "github",
        "owner": "Optimify-s-r-o",
        "repo": "argos",
        "releaseType": "draft"
      }
    ],
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./public/**/*"
    ],
    "extraFiles": [
      "bin/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "artifactName": "Argos-Setup-${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "shortcutName": "Argos",
      "warningsAsErrors": false,
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true,
      "createStartMenuShortcut": true
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^7.2.1",
    "electron-builder": "^22.10.5",
    "env-cmd": "^10.1.0",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1"
  }
}
