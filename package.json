  },
  "main": "public/Main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.5",
    "@types/react-router-dom": "^5.1.4",
    "@wojtekmaj/react-daterange-picker": "^2.5.0",
    "concurrently": "^5.3.0",
    "date-fns": "^2.16.1",
    "electron-store": "^5.1.1",
    "i18next": "^17.3.1",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.1",
    "react": "^16.13.1",
    "react-circular-progressbar": "^2.0.3",
    "react-contextmenu": "^2.13.0",
    "react-date-picker": "^7.10.0",
    "react-date-range": "^1.1.3",
    "react-dom": "^16.13.1",
    "react-i18next": "^10.13.2",
    "react-numeric-input": "^2.2.3",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "react-select": "^3.1.0",
    "react-switch": "^5.0.1",
    "redux": "^4.0.5",
    "styled-components": "^5.1.0",
    "truncate-middle": "^1.0.6",
    "uuid": "^3.4.0",
    "watch": "^1.0.2"
  },
  "scripts": {
    "dev": "concurrently \"yarn watch\" \"electron . --dev\"",
    "watch": "watch \"yarn build\" ./src",
    "postdev": "watch \"yarn build\" ./src",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "preelectron-start": "npm run build",
    "electron-start": "electron . --dev",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder build --win -c.extraMetadata.main=build/Main.js"
  },
  "build": {
    "productName": "Argos",
    "copyright": "Copyright Â© 2018-2020 Optimify s.r.o.",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [
      "bin/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "artifactName": "argos-setup-${version}.${ext}"
    },
    "nsis": {
      "shortcutName": "Argos"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^7.2.1",
    "electron-builder": "^21.2.0",
    "electron-reloader": "^1.0.1",
    "typescript": "^3.8.3"
  }
}
